<h1>クイズ編集</h1>

<%= form_with model: [:admin, @quiz], local: true, method: "patch" do |f| %>

    <div class="form-group">
        <label>ストーリー名</label>
        <%= f.text_field :story_name, class: "form-control" %>
    </div>
    
    <div class="form-group">
        <label>問題</label>
        <%= f.text_field :question, class: "form-control" %>
    </div>
    
    <div class="form-group">
        <label>選択肢１</label>
        <%= f.text_field :answer1, class: "form-control" %>
    </div>
    <div class="form-group">
        <label>選択肢２</label>
        <%= f.text_field :answer2, class: "form-control" %>
    </div>
    <div class="form-group">
        <label>選択肢３</label>
        <%= f.text_field :answer3, class: "form-control" %>
    </div>
    
    <div class="form-group">
        <label>答え</label>
        <%= f.text_field :answer, class: "form-control" %>
    </div>
    
    <div class="form-group">
        <label>説明</label>
        <%= f.text_field :description, class: "form-control" %>
    </div>
    <%= f.submit "更新", class: "btn btn-primary"%>
    <%= link_to "戻る", admin_quizzes_path, class: "btn btn-secondary" %> 

 
    
<% end %>