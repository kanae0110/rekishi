<h1>クイズ編集</h1>

<%= form_with model: [:admin, @quiz], local: true, method: "patch" do |f| %>

    <div class="form-group">
        <label>本文</label>
        <%= f.text_field :content, class: "form-control" %>
    </div>
    
    <div class="form-group">
        <label>問題</label>
        <%= f.text_field :question, class: "form-control" %>
    </div>
    
    <div class="form-group">
        <label>選択肢１</label>
        <%= f.text_field :answer1, class: "form-control" %>
    </div>
    <div class="form-group">
        <label>選択肢２</label>
        <%= f.text_field :answer2, class: "form-control" %>
    </div>
    <div class="form-group">
        <label>選択肢３</label>
        <%= f.text_field :answer3, class: "form-control" %>
    </div>
    
    <div class="form-group">
        <label>答え</label>
        <%= f.text_field :answer, class: "form-control" %>
    </div>
    
    <div class="form-group">
        <label>説明</label>
        <%= f.text_field :discription, class: "form-control" %>
    </div>
    
    <div class="form-group">
        <label>次の問題</label>
        <% next_quizzes=[["最後の問題にする", nil]]+Quiz.where(story_id: @quiz.story_id).map {|quiz| [ quiz.question, quiz.id ]} %>
        <%= f.select :next_id, next_quizzes, class: "form-control" %>
     
    </div>
    
    
    <%= f.submit "更新", class: "btn btn-primary"%>
    <%= link_to "戻る", admin_quizzes_path, class: "btn btn-secondary" %> 

 
    
<% end %>