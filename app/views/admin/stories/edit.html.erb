<h1>ストーリー変更</h1>

<%= form_with model: [:admin, @story], local: true, method: "patch" do |f| %>

    <div class="form-group">
        <label>カテゴリ</label>
        <%= f.text_field :category, class: "form-control" %>
    </div>
    
    <div class="form-group">
        <label>タイトル</label>
        <%= f.text_field :name, class: "form-control" %>
    </div>  
    
    <div class="form-group">
        <label>最初の問題</label>
        <%= f.select :start_id, @story.quizzes.map {|quiz| [ quiz.question, quiz.id ]}, class: "form-control" %>
    </div>
    
    <%= f.submit "更新", class: "btn btn-primary"%>
    
<% end %>