<h1>会員登録</h1>
<%= form_with model: @user, url: signup_path, local: true do |f| %>

  <div class="form-group">
    <label>名前</label>
    <%= f.text_field :name %>
  </div>
  
  <div class="form-group">
    <label>メールアドレス </label>
    <%= f.text_field :email %>
  </div>  
  
  <div class="form-group">
    <label>パスワード</label>
    <%= f.password_field :password %>
  </div>  
  
  <div class="form-group">
    <label>パスワード確認用</label>
    <%= f.password_field :password_confirmation %>
  </div>
    
  
    
  <%= f.submit "登録" %>
<% end %>